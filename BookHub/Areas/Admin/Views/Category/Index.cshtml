@{
	ViewData["Title"] = "Category List";
}
@model List<Category>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Category List</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="row pb-3">

			<div class="col-11 text-end">
				<a asp-controller="Category" asp-action="Create" class="btn btn-info">
					<i class="bi bi-plus-circle"></i>&nbsp; Add Category
				</a>
			</div>
		</div>
		<table class="table table=bordered table-striped">
			<thead>
				<tr>
					<th>Category Name</th>
					<th>Display Order</th>
					<th>Action</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
				{
					<tr>
						<td>@obj.Name</td>
						<td>@obj.DisplayOrder</td>
						<td>
							<div>
								<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
									<i class="bi bi-pencil-square"></i> &nbsp; Edit
								</a> &nbsp;
								<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
									<i class="bi bi-trash3-fill"></i>&nbsp; Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
		</div>
		</div>