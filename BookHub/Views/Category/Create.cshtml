@model Category

<form method="post">
	<div class="border mt-4 p-3">
		<div class="row pb-2">
			<h2 class="text-body-tertiary">Create Category</h2>
			<hr />
		</div>
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3 p-1">
			<label class="p-0" asp-for="Name"></label>
			<input type = "text" asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3 p-1">
			<label class="p-0" asp-for="DisplayOrder"></label>
			<input type="number" asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<div class="row p-1">
			<div><button type="submit" class="btn btn-info">Create</button>
				<a asp-controller="Category" asp-action="Index" class="btn btn-danger">Back</a>
			</div>
		</div>
	</div>
</form>